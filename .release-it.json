{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",

  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "release v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },

  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false,
    "preRelease": false,
    "tokenRef": "GITHUB_TOKEN"
  },

  "npm": {
    "publish": false
  },

  "hooks": {
    "before:init": ["pnpm validate"]
  },

  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat",     "section": "‚ú® Features"       },
          { "type": "fix",      "section": "üêõ Bug Fixes"      },
          { "type": "perf",     "section": "‚ö° Performance"    },
          { "type": "refactor", "section": "‚ôªÔ∏è  Refactoring"   },
          { "type": "docs",     "section": "üìö Documentation"  },
          { "type": "chore",    "hidden": true },
          { "type": "style",    "hidden": true },
          { "type": "test",     "hidden": true },
          { "type": "merge",    "hidden": true }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project are documented here.\n\nFormat: [Keep a Changelog](https://keepachangelog.com) ¬∑ Versioning: [Semantic Versioning](https://semver.org)\n"
    }
  }
}
